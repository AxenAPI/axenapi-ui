<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="yourControllerClass">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <top>
        <MenuBar>
            <Menu text="File">
                <!-- Add file options here -->
            </Menu>
            <Menu text="Help">
                <!-- Add help options here -->
            </Menu>
        </MenuBar>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER" spacing="10">
                <Label text="Search:"/>
                <TextField promptText="Enter search criteria"/>
                <Button text="Search" onAction="#search"/>
            </HBox>
            <TableView fx:id="fileInfoTable" styleClass="custom-table-view">
                <columns>
                    <TableColumn text="File Name" styleClass="table-column"/>
                    <TableColumn text="Title" styleClass="table-column"/>
                    <TableColumn text="Select" fx:id="selectColumn"/>
                </columns>
            </TableView>
            <HBox alignment="CENTER" spacing="10">
                <Button text="View Details" onAction="#viewDetails"/>
                <Button text="Export Data" onAction="#exportData"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>